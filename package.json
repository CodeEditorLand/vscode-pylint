{
	"activationEvents": [
		"onLanguage:python",
		"workspaceContains:.pylintrc",
		"workspaceContains:*.py"
	],
	"capabilities": {
		"virtualWorkspaces": {
			"description": "Virtual Workspaces are not supported with pylint.",
			"supported": false
		}
	},
	"contributes": {
		"commands": [
			{
				"category": "Pylint",
				"command": "pylint.restart",
				"title": "%command.restartServer%"
			}
		],
		"configuration": {
			"properties": {
				"pylint.args": {
					"default": [],
					"items": {
						"type": "string"
					},
					"markdownDescription": "%settings.args.description%",
					"scope": "resource",
					"type": "array"
				},
				"pylint.cwd": {
					"default": "${workspaceFolder}",
					"examples": [
						"${workspaceFolder}/src",
						"${fileDirname}"
					],
					"markdownDescription": "%settings.cwd.description%",
					"scope": "resource",
					"type": "string"
				},
				"pylint.enabled": {
					"default": true,
					"markdownDescription": "%settings.enabled.description%",
					"scope": "resource",
					"type": "boolean"
				},
				"pylint.ignorePatterns": {
					"default": [],
					"examples": [
						[
							"**/site-packages/**/*.py",
							".vscode/*.py"
						]
					],
					"items": {
						"type": "string"
					},
					"markdownDescription": "%settings.ignorePatterns.description%",
					"scope": "resource",
					"type": "array",
					"uniqueItems": true
				},
				"pylint.importStrategy": {
					"default": "useBundled",
					"enum": [
						"useBundled",
						"fromEnvironment"
					],
					"enumDescriptions": [
						"%settings.importStrategy.useBundled.description%",
						"%settings.importStrategy.fromEnvironment.description%"
					],
					"markdownDescription": "%settings.importStrategy.description%",
					"scope": "resource",
					"type": "string"
				},
				"pylint.interpreter": {
					"default": [],
					"items": {
						"type": "string"
					},
					"markdownDescription": "%settings.interpreter.description%",
					"scope": "resource",
					"type": "array"
				},
				"pylint.lintOnChange": {
					"default": false,
					"markdownDescription": "%settings.lintOnChange.description%",
					"scope": "machine",
					"tags": [
						"experimental"
					],
					"type": "boolean"
				},
				"pylint.path": {
					"default": [],
					"examples": [
						[
							"~/global_env/pylint"
						],
						[
							"~/.env/python",
							"-m",
							"pylint"
						]
					],
					"items": {
						"type": "string"
					},
					"markdownDescription": "%settings.path.description%",
					"scope": "resource",
					"type": "array"
				},
				"pylint.severity": {
					"additionalProperties": {
						"enum": [
							"Error",
							"Hint",
							"Information",
							"Warning"
						],
						"type": "string"
					},
					"default": {
						"convention": "Information",
						"error": "Error",
						"fatal": "Error",
						"info": "Information",
						"refactor": "Hint",
						"warning": "Warning"
					},
					"markdownDescription": "%settings.severity.description%",
					"scope": "resource",
					"type": "object"
				},
				"pylint.showNotifications": {
					"default": "off",
					"enum": [
						"off",
						"onError",
						"onWarning",
						"always"
					],
					"enumDescriptions": [
						"%settings.showNotifications.off.description%",
						"%settings.showNotifications.onError.description%",
						"%settings.showNotifications.onWarning.description%",
						"%settings.showNotifications.always.description%"
					],
					"markdownDescription": "%settings.showNotifications.description%",
					"scope": "machine",
					"type": "string"
				}
			}
		},
		"languages": [
			{
				"filenames": [
					".pylintrc"
				],
				"id": "ini"
			}
		]
	},
	"dependencies": {
		"fs-extra": "11.2.0"
	},
	"description": "%extension.description%",
	"devDependencies": {
		"@types/chai": "5.0.1",
		"@types/fs-extra": "11.0.4",
		"@types/glob": "8.1.0",
		"@types/node": "22.8.6",
		"@types/sinon": "17.0.3",
		"chai": "5.1.2",
		"glob": "11.0.0",
		"sinon": "19.0.2",
		"ts-loader": "9.5.1",
		"typemoq": "2.1.0"
	},
	"displayName": "Pylint",
	"extensionDependencies": [
		"ms-python.python"
	],
	"galleryBanner": {
		"color": "#1e415e",
		"theme": "dark"
	},
	"icon": "icon.png",
	"l10n": "./l10n",
	"main": "./dist/extension.js",
	"name": "pylint",
	"preview": true,
	"scripts": {
		"compile": "webpack",
		"compile-tests": "tsc -p . --outDir out",
		"tests": "node ./out/test/ts_tests/runTest.js",
		"vsce-package": "vsce package -o pylint.vsix",
		"watch-tests": "tsc -p . -w --outDir out"
	},
	"serverInfo": {
		"module": "pylint",
		"name": "Pylint"
	}
}
